@model IEnumerable<Domain.Entities.Wear>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-header">
        Список товарів
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.WearId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fabric)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Size)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="text-center">Дія</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @item.WearId
                    </td>
                    <td>
                        @Html.ActionLink(item.Name, "Edit", new { item.WearId })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size )
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fabric )
                    </td>
                    <td class="text-right">
                        @item.Price.ToString("# грн")
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("WearId", item.WearId)
                            <input type="submit" class="btn btn-secondary btn-sm" value="Видалити" />
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
    <p class="card-footer">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-secondary" })

    </p>
</div>