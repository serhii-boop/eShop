@model Domain.Entities.Cart

<div class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
    @Html.ActionLink("Замовити", "Index", "Cart",
    new { returnUrl = Request.Url.PathAndQuery },
    new { @class = "btn btn-secondary navbar-btn" })
</div>

<div class="navbar-text navbar-right">
    <b>Ваша корзина</b>
    @Model.Lines.Sum(x => x.Quantity)
    @if ((Model.Lines.Sum(x => x.Quantity) % 10 == 2) || (Model.Lines.Sum(x => x.Quantity) % 10 == 3) || (Model.Lines.Sum(x => x.Quantity) % 10 == 4)) {<text>товари</text>}
    else if (Model.Lines.Sum(x => x.Quantity) % 10 == 1)
    {<text>товар</text>}
    else
    {<text>товарів</text>}
    @Model.ComputeTotalValue().ToString("# грн ")
</div>